/* pages/member/member.wxss */
page{
  background-color: #fff;
}
.user-card{
  background-color: #d71f03;
  color:#fff;
  overflow: hidden;
  height:240rpx;
  padding: 20px;
}
.user-avatar{
  /* width: 100px;
  height: 100px; */
  /* width: 260rpx;
  height: 200rpx; */
  position: relative;
  float: left;
  margin-right: 20px;
}
.user-avatar image{
  width: 170rpx;
  height: 170rpx;
}
.user-certified{
  position: absolute;
  background-color: #d71f03;
  bottom: 0px;
  left: 0px;
  border-radius: 3rpx;
  font-size: 24rpx;
}
.user-info{
  float: left;
}
.user-info text{
  display: block;
  font-size: 24rpx;
  margin-bottom: 3rpx;
}

.banner{
  /* height: 150rpx; */
  padding:10px;
  /* width: 100vw; */
  font-size:32rpx;
}
.banner-list{
  display: flex;
  flex-wrap: wrap;
}
.banner-item{
  display: inline-block;
  width: 50%;
  text-align: center;
}
.banner-pic{
  display: block;
  /* width: 40px;
  height: 40px; */
  width: 70rpx;
  height: 70rpx;
  margin:10px auto;
}