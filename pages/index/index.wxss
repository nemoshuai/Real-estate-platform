/**index.wxss**/
.page-body{
  height: 100%;
}
.page-section{
  width: 100%;
  background-color: #fff;
}

.swiper-item{
  height: 149px;
  display:block;
  /*background-color: blue;*/
}

.banner{
  /* height: 150rpx; */
  padding:10px 0;
}
.banner-list{
  display: flex;
  flex-direction: row;
}
.banner-item{
  display: inline-block;
  width: 180rpx;
  color: #6b6b6b;
  text-align: center;
}
.banner-pic{
  display: block;
  width: 65rpx;
  height: 65rpx;
  margin:0 auto;
}
.banner-text{
  font-size: 32rpx;
}
.advertise{
  margin-top:16px;
  margin-bottom: 2px;
}

.advertise-header{
  color: #d71f03;
  overflow: hidden;
  padding: 20rpx 10rpx; 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 36rpx;
}

.advertise-header image{
  width:45rpx;
  height: 50rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.header-left{
  /*display: inline-block;*/
  /* float: left; */
  display: flex;
  align-items:center;
  vertical-align: middle;
}
/* .header-left text{
  font-size:46.8rpx;
} */

.header-right{
  /*display: inline-block;*/
  /* float: right; */
  border:solid 1px #d71f03;
  border-radius:3px;
  padding: 4rpx 10rpx;
  font-size: 27rpx;
}
.advertise-content{
  width: 100%;
  font-size: 13px;
}
.advertise-content text{
   display: block;
}
.advertise-item{
  position: relative;
  width: 100%;
  border-top: solid 1px #f2f2f2;
  border-bottom:solid 1px #f2f2f2;
  padding: 30rpx; 
  /* padding-right: 0; */
  vertical-align: middle; 
}
.advertise-poster{
  display: inline-block;
  /* width: 277.36rpx;
  height:262.08rpx; */
  width: 280rpx;
  height: 200rpx;
} 
.advertise-info{
  position: absolute; 
  display: inline-block;
  margin-left: 10px;
  width: 100%;
  font-size: 28rpx;
}
.advertise-title{
  /* font-size: 39.78rpx; */
  font-size: 32rpx;
  font-weight: bolder;
  margin-bottom: 10rpx;
}

.advertise-price{
  position: absolute; 
  font-size:49rpx;
  color:#d71f03;
  margin-left: 50rpx; 
  text-align: right;
}